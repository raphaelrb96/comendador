<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProdutoRevendaActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_capa_prod_revenda_detalhe"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="450dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_fotos_detalhes"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <TextView
                android:id="@+id/tv_detalhe_prod_revenda_nome"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="Multimetro digital"
                android:layout_gravity="start"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detalhe_prod_revenda_descricao"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_gravity="center|start"
                android:gravity="start"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="140dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Seu lucro será:"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorSecondary"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:id="@+id/card_5"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:layout_marginRight="34dp"
                android:layout_marginLeft="34dp"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/comissao_produto_revenda_card"
                        android:text="5,00"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textSize="34sp"
                        android:textColor="@color/colorSecondary"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Reais"
                        android:textSize="18sp"
                        android:textColor="@color/colorSecondary"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Por item vendido"
                        android:textSize="12sp"
                        android:textColor="@color/colorSecondary"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Maior chances de venda. \n Lucro alto"
                            android:textSize="14sp"
                            android:layout_marginRight="4dp"
                            android:layout_marginLeft="4dp"
                            android:id="@+id/exemplo_comissao_produto_revenda"
                            android:textColor="@color/colorSecondary"
                            android:gravity="center"
                            android:textStyle="bold|italic"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:background="@color/red"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/titulo_cores_produto_revenda"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="18sp"
                        android:text="Cores:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:paddingStart="4dp"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/rv_cores_produto_revenda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="69dp">
                        <LinearLayout
                            android:layout_marginLeft="8dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_margin="4dp"
                                android:layout_marginRight="16dp"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimaryLight"
                                    android:textSize="14sp"
                                    android:text="Comissão:"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:layout_gravity="center"
                                    android:id="@+id/comissao_produto_detalhe_revenda"
                                    android:textSize="24sp"
                                    android:text="2,00"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimaryLight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <FrameLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginRight="10dp"
                                    android:layout_gravity="center|end"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimaryLight"
                                    android:textSize="16sp"
                                    android:text="Total:"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </FrameLayout>
                            <TextView
                                android:id="@+id/total_produto_detalhe_revenda"
                                android:layout_marginRight="16dp"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="26sp"
                                android:text="R$ 10,00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:background="@color/red"
        android:elevation="16dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/efab_prod_detalhe_revenda"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"
                android:elevation="16dp"
                android:background="@color/red"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <FrameLayout
                    android:backgroundTint="#fff"
                    android:background="@drawable/ic_dinheiro_black_24dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <FrameLayout
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:textAllCaps="true"
                    android:text="Revender esse produto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:onClick="fecha"
        android:alpha="0.5"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_margin="12dp"
        app:backgroundTint="#fff"
        app:fabSize="mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>