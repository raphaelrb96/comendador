<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                app:cardElevation="3dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="start|top"
                app:cardCornerRadius="40dp"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <ImageView
                    android:id="@+id/img_usuario_comissao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Teste teste teste teste"
                    android:textSize="18sp"
                    android:id="@+id/tv_nome_usuario_comissao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"/>
                <TextView
                    android:layout_marginTop="6dp"
                    android:text="Teste teste teste teste"
                    android:textSize="12sp"
                    android:id="@+id/tv_time_comeco_usuario_comissao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"/>
                <TextView
                    android:layout_marginTop="6dp"
                    android:text="Teste teste teste teste"
                    android:textSize="14sp"
                    android:id="@+id/tv_zap_usuario_comissao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="italic"
                android:text="Ã  receber "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="8dp"
                    android:text="R$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/total_a_receber_comissao"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:textSize="30sp"
                    android:text="50,00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                app:elevation="8dp"
                android:textColor="@color/red"
                android:text="Pagar Tudo"
                android:id="@+id/efab_pagar_comissoes"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:padding="1dp"
                android:layout_width="match_parent"
                app:backgroundTint="@color/colorPrimaryLight"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>