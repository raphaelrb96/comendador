<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minHeight="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                app:cardCornerRadius="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/img_solicitacoes_revendedores"
                    android:background="@drawable/ic_account_circle_black_24dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="8dp"
                android:textSize="24sp"
                android:text="Raphael"
                android:id="@+id/tv_nome_revendedor"
                android:layout_width="match_parent"
                android:minHeight="40dp"
                android:gravity="bottom"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:text="991933525"
                android:id="@+id/tv_whatapp_revendedor"
                android:layout_width="match_parent"
                android:gravity="top"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="12dp"
                android:textSize="18sp"
                android:text="Programador com experiencia"
                android:id="@+id/tv_obs_revendedor"
                android:layout_width="match_parent"
                android:gravity="top"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/bt_liberar_revendedores"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:text="Liberar Acesso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>