<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="140dp">
    <androidx.cardview.widget.CardView
        app:cardElevation="1dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center"
        android:layout_width="116dp"
        android:layout_height="116dp">
        <ImageView
            android:id="@+id/imagem_cart_main"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_nome_cart_main"
            android:textSize="20sp"
            android:gravity="center|start"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <FrameLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/tv_total_cart_main"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorSecondaryDark"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginRight="2dp"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/bt_diminui_produto_cart_main"
                    android:background="@drawable/ic_remove_circle_outline_black_30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center|start"
                    app:backgroundTint="@color/colorPrimaryDark"
                    app:fabSize="mini"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView
                    android:id="@+id/quantidade_produto_cart_main"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textSize="24sp"
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/bt_aumentar_produto_cart_main"
                    android:background="@drawable/ic_add_circle_outline_black_30dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center|end"
                    app:backgroundTint="@color/colorPrimaryDark"
                    app:fabSize="mini"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>