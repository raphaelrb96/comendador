<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="280dp">
    <androidx.cardview.widget.CardView
        app:cardElevation="1dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="220dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_prod_lista_revenda"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="180dp"
                android:layout_height="180dp" />
            <TextView
                android:id="@+id/valor_prod_lista_revenda"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorSecondaryDark"
                android:text="30,00"
                android:elevation="4dp"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginRight="2dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/bt_diminui_prod_lista_revenda"
            android:background="@drawable/ic_remove_circle_outline_black_30dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center|start"
            app:backgroundTint="@color/colorPrimaryDark"
            app:fabSize="mini"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/quantidade_prod_lista_revenda"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="24sp"
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/bt_aumentar_prod_lista_revenda"
            android:background="@drawable/ic_add_circle_outline_black_30dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center|end"
            app:backgroundTint="@color/colorPrimaryDark"
            app:fabSize="mini"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
</LinearLayout>