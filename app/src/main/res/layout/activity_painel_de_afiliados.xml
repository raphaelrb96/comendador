<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PainelDeAfiliados">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <View
                    android:layout_marginRight="8dp"
                    android:backgroundTint="@color/colorSecondaryLight"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_arrow_back_black_24dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/bt_voltar_painel_afiliados" />
                <TextView
                    android:id="@+id/tv_toolbar_painel_afiliados"
                    android:textSize="20sp"
                    android:layout_marginLeft="6dp"
                    android:textStyle="bold"
                    android:text="Minha equipe"
                    android:textColor="@color/colorSecondaryLight"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardElevation="4dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_username_painel_afiliados"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="8dp"
                        app:boxCornerRadiusBottomEnd="5dp"
                        app:boxCornerRadiusBottomStart="5dp"
                        app:boxCornerRadiusTopEnd="5dp"
                        app:boxCornerRadiusTopStart="5dp"
                        style="@style/MeuEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apelido">

                        <com.google.android.material.textfield.TextInputEditText
                            android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
                            android:drawablePadding="6dp"
                            android:drawableTint="@color/colorSecondaryLight"
                            android:imeOptions="actionNext"
                            android:id="@+id/et_username_add_afiliado"
                            android:textCursorDrawable="@drawable/curso_text_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="12dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp"
                            app:cardCornerRadius="10dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp">
                            <ProgressBar
                                android:layout_gravity="center"
                                android:id="@+id/pb_add_revendedor_afiliado"
                                android:layout_width="15dp"
                                android:layout_height="15dp"/>
                            <ImageView
                                android:id="@+id/info_add_revendedor_afiliado"
                                android:background="@drawable/ic_action_alert_info"
                                android:adjustViewBounds="true"
                                android:backgroundTint="@color/colorSecondaryLight"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_info_card_afiliados"
                            android:layout_marginLeft="8dp"
                            android:textSize="13sp"
                            android:gravity="start"
                            android:maxLines="2"
                            android:textColor="@color/colorSecondary"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/bt_add_revendedor"
                        android:elevation="10dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:text="ADICIONAR REVENDEDOR"
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:background="@drawable/autenticado"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </FrameLayout>


                <LinearLayout
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="40dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center|start"
                        android:text="Vendedores Ativos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <FrameLayout
                    android:layout_gravity="end"
                    android:layout_width="40dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="0"
                        android:id="@+id/total_afiliados_autenticados"
                        android:minWidth="30dp"
                        android:maxHeight="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="4dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:background="@drawable/analize"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />
                </FrameLayout>


                <LinearLayout
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="40dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center|start"
                        android:text="Aguardando confirmação"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <FrameLayout
                    android:layout_gravity="end"
                    android:layout_width="40dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/numero_de_analize"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:minWidth="30dp"
                        android:maxHeight="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/titulo_meus_revendedores"
                android:visibility="gone"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:textColor="@color/colorSecondaryLight"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:text="Meus revendedores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="true"
                android:id="@+id/rv_painel_afiliados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:id="@+id/pb_meus_afiliados"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>