<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            app:cardCornerRadius="25dp"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:backgroundTint="@color/colorSecondaryLight"
                android:background="@drawable/ic_account_circle_black_24dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:id="@+id/img_perfil_usuario_afiliado"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="70dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="14dp"
                android:id="@+id/tv_nome_afiliado"
                android:gravity="bottom"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_apelido_afiliado"
                android:gravity="top"
                android:textColor="@color/colorSecondaryLight"
                android:layout_marginLeft="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="end"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/icon_afiliado_em_autenticado"
                    android:layout_gravity="center"
                    android:background="@drawable/autenticado"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/icon_afiliado_em_analise"
                    android:layout_gravity="center"
                    android:background="@drawable/analize"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </FrameLayout>


        </LinearLayout>
    </FrameLayout>
    <View
        android:layout_gravity="bottom"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="12dp"
        android:background="@color/back_rv"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</FrameLayout>