<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProdutoDetalheActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:backgroundTint="@color/colorSecondaryDark"
                    android:background="@drawable/ic_arrow_back_black_24dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center|start"
                    android:clickable="true"
                    android:id="@+id/bt_voltar_produto_detalhe"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></FrameLayout>
                <View
                    android:backgroundTint="@color/colorSecondaryDark"
                    android:background="@drawable/zap"
                    android:layout_gravity="end"
                    android:clickable="true"
                    android:id="@+id/bt_zap"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_detalhe_prod_nome"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="48sp"
                android:textColor="@color/colorSecondary"
                android:layout_gravity="start"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:layout_gravity="center_horizontal"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <ImageView
                    android:id="@+id/img_pod_detalhe"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_detalhe_prod_valor"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:textSize="68sp"
                android:textColor="@color/colorSecondary"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detalhe_prod_valor_antigo"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:textSize="38sp"
                android:textColor="@color/colorSecondaryLight"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detalhe_prod_valor_economia"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="@color/colorSecondaryLight"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detalhe_prod_descricao"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="@color/colorSecondary"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="140dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:onClick="comprarProdDetalhe"
        android:id="@+id/efab_prod_detalhe"
        app:icon="@drawable/ic_check_black_100dp"
        app:iconTint="@color/colorPrimaryLight"
        android:textColor="@color/colorPrimaryLight"
        android:text="Eu Quero !"
        android:textSize="20sp"
        app:iconSize="35dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal|bottom"
        app:backgroundTint="@color/colorSecondaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:id="@+id/pb_prod_detalhe"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>